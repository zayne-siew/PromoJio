<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9C178">

    <TextView
        android:id="@+id/spinwheel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:elevation="4dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="Lucky Spin!"
        android:textColor="#7A3FE3"
        android:textSize="50dp" />


    <ImageView
        android:id="@+id/outerRingImageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:src="@drawable/border" />

    <ImageView
        android:id="@+id/wheelImageView"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_centerInParent="true"
        android:src="@drawable/wheel" />

    <ImageView
        android:id="@+id/pointerImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@id/outerRingImageView"
        android:layout_centerHorizontal="true"
        android:src="@drawable/pointer" />

    <Button
        android:id="@+id/spinButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/outerRingImageView"
        android:text="Spin" />

</RelativeLayout>